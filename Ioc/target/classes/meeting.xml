<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="car1" class="com.spring.quickstart.Car">
        <property name="brand" value="奥迪"/>
        <property name="color" value="黑色"/>
        <property name="parameter" value="4.0t"/>
    </bean>
    <bean id="car2" class="com.spring.quickstart.Car">
        <property name="brand" value="宝马"/>
        <property name="color" value="白色"/>
        <property name="parameter" value="4.0t"/>

    </bean>
    <bean id="car3" class="com.spring.quickstart.Car">
        <property name="brand" value="宝马"/>
        <property name="color" value="棕色"/>
        <property name="parameter" value="3.5t"/>
    </bean>

    <bean id="boss1" class="com.spring.quickstart.Boss">
        <property name="name" value="马云"/>
        <property name="company" value="阿里巴巴"/>
        <property name="car" ref="car1"/>
        <property name="hobbies">
            <list>
                <value>看新闻</value>
                <value>做演讲</value>
                <value>做公益</value>
            </list>
        </property>
    </bean>
    <bean id="boss2" class="com.spring.quickstart.Boss">
        <property name="name" value="马化腾"/>
        <property name="company" value="腾讯"/>
        <property name="car" ref="car2"/>
        <property name="hobbies">
            <list>
                <value>看新闻</value>
                <value>做演讲</value>
            </list>
        </property>
    </bean>
    <bean id="boss3" class="com.spring.quickstart.Boss">
        <property name="name" value="雷军"/>
        <property name="company" value="小米"/>
        <property name="car" ref="car3"/>
        <property name="hobbies">
            <list>
                <value>看新闻</value>
                <value>玩游戏</value>
            </list>
        </property>
    </bean>
    <bean id="meeting" class="com.spring.quickstart.Meeting">
        <property name="theme" value="中国互联网发展讨论会"/>
        <property name="bosses">
            <list>
                <ref bean="boss1"/>
                <ref bean="boss2"/>
                <ref bean="boss3"/>
            </list>
        </property>
    </bean>

</beans>